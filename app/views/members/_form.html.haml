= simple_form_for @member, :html => { :class => 'form-horizontal' } do |f|
  = f.input :first_name
  = f.input :middle_name
  = f.input :last_name
  = f.input :number
  = f.input :email
  = f.input :password
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), members_path, :class => 'btn'
